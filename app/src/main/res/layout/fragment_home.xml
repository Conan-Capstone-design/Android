<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:id="@+id/tvCharacterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/suit_semibold"
        android:text="Character"
        android:textSize="20dp"
        android:textColor="@color/black01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character01_layout"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/conan01"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/tvCharacterTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvCharacterTitle"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character01"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/a_conan"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/character01_layout"
        app:layout_constraintEnd_toEndOf="@+id/character01_layout"
        app:layout_constraintStart_toStartOf="@+id/character01_layout"
        app:layout_constraintTop_toTopOf="@+id/character01_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character01_background"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@color/Gray700"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/character01_layout"
        app:layout_constraintEnd_toEndOf="@+id/character01_layout"
        app:layout_constraintStart_toStartOf="@+id/character01_layout"
        app:layout_constraintTop_toTopOf="@+id/character01_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/conan_title"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/roundtab__character_title"
        android:fontFamily="@font/suit_medium"
        android:gravity="center"
        android:text="코난"
        android:textColor="@color/Gray800"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/character01_layout"
        app:layout_constraintEnd_toEndOf="@+id/character01_layout"
        app:layout_constraintStart_toStartOf="@+id/character01_layout" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character02_layout"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:background="@color/conan01"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/character01_layout"
        app:layout_constraintTop_toBottomOf="@+id/tvCharacterTitle"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character02"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/shinchangtts02"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/character02_layout"
        app:layout_constraintEnd_toEndOf="@+id/character02_layout"
        app:layout_constraintStart_toStartOf="@+id/character02_layout"
        app:layout_constraintTop_toTopOf="@+id/character02_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character02_background"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@color/Gray700"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/character02_layout"
        app:layout_constraintEnd_toEndOf="@+id/character02_layout"
        app:layout_constraintStart_toStartOf="@+id/character02_layout"
        app:layout_constraintTop_toTopOf="@+id/character02_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/character02_title"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/roundtab__character_title"
        android:fontFamily="@font/suit_medium"
        android:gravity="center"
        android:text="짱구"
        android:textColor="@color/Gray800"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/character02_layout"
        app:layout_constraintEnd_toEndOf="@+id/character02_layout"
        app:layout_constraintStart_toStartOf="@+id/character02_layout" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character03_layout"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:background="@color/conan01"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/character02_layout"
        app:layout_constraintTop_toBottomOf="@+id/tvCharacterTitle"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character03"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/charoro"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/character03_layout"
        app:layout_constraintEnd_toEndOf="@+id/character03_layout"
        app:layout_constraintStart_toStartOf="@+id/character03_layout"
        app:layout_constraintTop_toTopOf="@+id/character03_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character03_background"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@color/Gray700"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/character03_layout"
        app:layout_constraintEnd_toEndOf="@+id/character03_layout"
        app:layout_constraintStart_toStartOf="@+id/character03_layout"
        app:layout_constraintTop_toTopOf="@+id/character03_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/character03_title"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/roundtab__character_title"
        android:fontFamily="@font/suit_medium"
        android:gravity="center"
        android:text="케로로"
        android:textColor="@color/Gray800"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/character03_layout"
        app:layout_constraintEnd_toEndOf="@+id/character03_layout"
        app:layout_constraintStart_toStartOf="@+id/character03_layout" />


    <ImageView
        android:id="@+id/ivEQ"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/main_eq"
        app:layout_constraintBottom_toBottomOf="@+id/ivSelectedCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivSelectedCharacter"
        app:layout_constraintVertical_bias="0.485" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivSelectedCharacter"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="31dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImage"
        android:background="@color/conan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conan_title" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivSelectedCharacter02"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main_center_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ivSelectedCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivSelectedCharacter"
        app:shapeAppearanceOverlay="@style/CircleImage" />

    <!--피치-->
    <TextView
        android:id="@+id/tvPitchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/suit_bold"
        android:text="Pitch"
        android:textSize="16dp"
        android:textColor="@color/black01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_layout" />

    <SeekBar
        android:id="@+id/seekBarPitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:max="100"
        android:progressDrawable="@drawable/seekbar"
        android:splitTrack="false"
        android:thumb="@drawable/thumb"
        android:thumbOffset="-3dp"
        android:translationY="-7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPitchLabel"
        app:layout_constraintTop_toTopOf="@id/tvPitchLabel" />

    <ImageView
        android:id="@+id/ivThumbAnchor"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:visibility="invisible"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="@id/seekBarPitch"
        app:layout_constraintBottom_toBottomOf="@id/seekBarPitch"
        app:layout_constraintStart_toStartOf="@id/seekBarPitch" />

    <TextView
        android:id="@+id/tvPitchValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/suit_bold"
        android:textColor="@color/lightblue"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@id/ivPitchArrow"
        app:layout_constraintStart_toStartOf="@id/ivPitchArrow"
        app:layout_constraintEnd_toEndOf="@id/ivPitchArrow" />

    <ImageView
        android:id="@+id/ivPitchArrow"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/arrow_lightblue"
        app:layout_constraintBottom_toTopOf="@id/seekBarPitch"
        app:layout_constraintStart_toStartOf="@id/ivThumbAnchor"
        app:layout_constraintEnd_toEndOf="@id/ivThumbAnchor"/>

    <!--팀버-->
    <TextView
        android:id="@+id/tvTimbreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/suit_bold"
        android:text="Timbre"
        android:textSize="16dp"
        android:textColor="@color/black01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPitchLabel" />

    <SeekBar
        android:id="@+id/seekBarTimbre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:max="100"
        android:progressDrawable="@drawable/seekbar_blue"
        android:splitTrack="false"
        android:thumb="@drawable/thumb"
        android:thumbOffset="-3dp"
        android:translationY="-7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTimbreLabel"
        app:layout_constraintTop_toTopOf="@id/tvTimbreLabel" />

    <ImageView
        android:id="@+id/ivTimbreAnchor"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:visibility="invisible"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="@id/seekBarTimbre"
        app:layout_constraintBottom_toBottomOf="@id/seekBarTimbre"
        app:layout_constraintStart_toStartOf="@id/seekBarTimbre" />

    <TextView
        android:id="@+id/tvTimbreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/blue"
        android:textSize="13sp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintBottom_toTopOf="@id/ivTimbreArrow"
        app:layout_constraintStart_toStartOf="@id/ivTimbreArrow"
        app:layout_constraintEnd_toEndOf="@id/ivTimbreArrow" />

    <ImageView
        android:id="@+id/ivTimbreArrow"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/arrow_blue"
        app:layout_constraintBottom_toTopOf="@id/seekBarTimbre"
        app:layout_constraintStart_toStartOf="@id/ivThumbAnchor"
        app:layout_constraintEnd_toEndOf="@id/ivThumbAnchor"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="@+id/ivSelectedCharacter"
        app:layout_constraintStart_toStartOf="@+id/ivSelectedCharacter"
        app:layout_constraintTop_toBottomOf="@+id/ivSelectedCharacter">

        <ImageButton
            android:id="@+id/btnBluetooth"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_bluetooth"
            app:layout_constraintEnd_toStartOf="@+id/btnDownload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnDownload"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_download"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
