<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:background="@drawable/border_highlight">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character01_layout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="11dp"
        android:background="@color/conan01"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImage">

    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character01"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/a_conan"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/character01_layout"
        app:layout_constraintEnd_toEndOf="@+id/character01_layout"
        app:layout_constraintStart_toStartOf="@+id/character01_layout"
        app:layout_constraintTop_toTopOf="@+id/character01_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/item_chattitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:text="코난"
        android:fontFamily="@font/suit_medium"
        android:textColor="@color/Gray800"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/character01_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="2024.01.12"
        android:textColor="@color/Gray800"
        android:fontFamily="@font/suit_regular"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_chattitle_tv"
        app:layout_constraintTop_toBottomOf="@id/item_chattitle_tv" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_ic_right" />

</androidx.constraintlayout.widget.ConstraintLayout>