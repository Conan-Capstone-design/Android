<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tts_conan_layout" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/soldoutlayout"
        android:layout_width="216dp"
        android:layout_height="216dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/tts_conan_default"
        app:shapeAppearanceOverlay="@style/CircleImage"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView">

    </com.google.android.material.imageview.ShapeableImageView>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/tts_conan_ribbon" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="대화하고 싶은 캐릭터를 선택하세요!"
        android:textSize="16dp"
        android:textColor="@color/Gray800"
        android:visibility="visible"
        android:fontFamily="@font/suit_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/characterlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_semibold"
            android:text="코난"
            android:textColor="@color/conan03"
            android:textSize="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_semibold"
            android:text="와(과) 대화를 시작합니다!"
            android:textColor="@color/Gray800"
            android:textSize="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/character"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/roundtab_tts" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character01_layout"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImage"
        android:background="@color/conan01">
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character01"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/a_conan"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/character01_layout"
        app:layout_constraintEnd_toEndOf="@+id/character01_layout"
        app:layout_constraintStart_toStartOf="@+id/character01_layout"
        app:layout_constraintTop_toTopOf="@+id/character01_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character01_background"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@color/Gray700"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/character01_layout"
        app:layout_constraintEnd_toEndOf="@+id/character01_layout"
        app:layout_constraintStart_toStartOf="@+id/character01_layout"
        app:layout_constraintTop_toTopOf="@+id/character01_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/conan_title"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/roundtab__character_title"
        android:fontFamily="@font/suit_medium"
        android:gravity="center"
        android:text="코난"
        android:textColor="@color/Gray800"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/character01_layout"
        app:layout_constraintEnd_toEndOf="@+id/character01_layout"
        app:layout_constraintStart_toStartOf="@+id/character01_layout" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character02_layout"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginBottom="24dp"
        android:background="@color/conan01"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/character03_layout"
        app:layout_constraintStart_toEndOf="@+id/character01_layout"
        app:shapeAppearanceOverlay="@style/CircleImage"></com.google.android.material.imageview.ShapeableImageView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character02"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/shinchangtts02"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/character02_layout"
        app:layout_constraintEnd_toEndOf="@+id/character02_layout"
        app:layout_constraintStart_toStartOf="@+id/character02_layout"
        app:layout_constraintTop_toTopOf="@+id/character02_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character02_background"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@color/Gray700"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/character02_layout"
        app:layout_constraintEnd_toEndOf="@+id/character02_layout"
        app:layout_constraintStart_toStartOf="@+id/character02_layout"
        app:layout_constraintTop_toTopOf="@+id/character02_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/character02_title"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/roundtab__character_title"
        android:fontFamily="@font/suit_medium"
        android:gravity="center"
        android:text="짱구"
        android:textColor="@color/Gray800"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/character02_layout"
        app:layout_constraintEnd_toEndOf="@+id/character02_layout"
        app:layout_constraintStart_toStartOf="@+id/character02_layout" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character03_layout"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="24dp"
        android:background="@color/conan01"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImage"></com.google.android.material.imageview.ShapeableImageView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character03"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/charoro"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/character03_layout"
        app:layout_constraintEnd_toEndOf="@+id/character03_layout"
        app:layout_constraintStart_toStartOf="@+id/character03_layout"
        app:layout_constraintTop_toTopOf="@+id/character03_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character03_background"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@color/Gray700"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/character03_layout"
        app:layout_constraintEnd_toEndOf="@+id/character03_layout"
        app:layout_constraintStart_toStartOf="@+id/character03_layout"
        app:layout_constraintTop_toTopOf="@+id/character03_layout"
        app:shapeAppearanceOverlay="@style/CircleImage">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/character03_title"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/roundtab__character_title"
        android:fontFamily="@font/suit_medium"
        android:gravity="center"
        android:text="케로로"
        android:textColor="@color/Gray800"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/character03_layout"
        app:layout_constraintEnd_toEndOf="@+id/character03_layout"
        app:layout_constraintStart_toStartOf="@+id/character03_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>